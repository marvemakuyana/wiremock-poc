{
    "request": {
        "method": "GET",
        "urlPathPattern": "/api/v1/customers/.*"
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json"
        },
        "jsonBody": {
            "id": "{{request.path.[3]}}",
            "name": "User-{{randomValue type='ALPHANUMERIC' length=5}}",
            "email": "user{{randomValue type='ALPHANUMERIC' length=5}}@example.com",
            "status": "ACTIVE",
            "createdAt": "{{now}}"
        },
        "transformers": [
            "response-template"
        ],
        "fixedDelayMilliseconds": 500
    }
}